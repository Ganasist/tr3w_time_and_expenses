<h1>Editing billing_code</h1>

<% form_for(:billing_code, :url => billing_code_path(@billing_code), :html => { :method => :put }) do |f| %>
  <p>
    <b>Code</b><br />
    <%= f.text_field :code %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', billing_code_path(@billing_code) %> |
<%= link_to 'Back', billing_codes_path %>